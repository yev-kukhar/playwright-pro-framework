{
  "name": "playwright-typescript-framework",
  "version": "1.0.0",
  "description": "UI and API test automation framework using Playwright and TypeScript",
  "private": true,

  "scripts": {
    "test": "playwright test",

    "test:ui": "playwright test tests/ui",
    "test:api": "playwright test tests/api",

    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:ui-mode": "playwright test --ui",

    "test:allure": "REPORTER=allure playwright test",

    "report": "playwright show-report",

    "allure:generate": "allure generate allure-results --clean -o allure-report",
    "allure:open": "allure open allure-report",
    "allure:clean": "rm -rf allure-results allure-report",

    "clean": "rm -rf test-results playwright-report allure-results allure-report"
  },

  "keywords": [
    "playwright",
    "typescript",
    "ui-testing",
    "api-testing",
    "test-automation",
    "e2e",
    "allure"
  ],

  "license": "MIT",

  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/node": "^20.11.0",
    "allure-playwright": "^3.4.5",
    "dotenv": "^17.2.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },

  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}